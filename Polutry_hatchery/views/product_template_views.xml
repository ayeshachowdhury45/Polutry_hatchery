<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_form_inherit_egg" model="ir.ui.view">
        <field name="name">product.template.form.inherit.egg</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Add it under Inventory tab -->
            <xpath expr="//page[@name='inventory']" position="inside">
                <group>
                    <field name="is_egg_product"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
