<odoo>
    <!-- Action -->
    <record id="action_chick_packaging" model="ir.actions.act_window">
        <field name="name">Chick Packaging</field>
        <field name="res_model">chick.packaging</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_chick_packaging_root" name="Chick Packaging" parent="menu_hatchery_management" sequence="40"/>
    <menuitem id="menu_chick_packaging_action" name="Manage Chick Packaging" parent="menu_chick_packaging_root" action="action_chick_packaging"/>

    <!-- List View -->
    <record id="view_chick_packaging_tree" model="ir.ui.view">
        <field name="name">chick.packaging.list</field>
        <field name="model">chick.packaging</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="hatcher_stage_id"/>
                <field name="chicks_count"/>
                <field name="boxes_count"/>
                <field name="packaging_mortality"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_chick_packaging_form" model="ir.ui.view">
        <field name="name">chick.packaging.form</field>
        <field name="model">chick.packaging</field>
        <field name="arch" type="xml">
            <form string="Chick Packaging">
                <header>
                    <!-- Buttons -->
                    <button name="action_ready_for_transfer"
                            type="object"
                            string="Ready for Transfer"
                            class="btn-primary"/>
                    <button name="action_done"
                            type="object"
                            string="Done"
                            class="btn-success"/>
                    <!-- Status Bar -->
                    <field name="state" widget="statusbar" statusbar_visible="draft,ready_for_transfer,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="hatcher_stage_id"/>
                        <field name="chicks_count"/>
                        <field name="boxes_count" readonly="1"/>
                    </group>
                    <group>
                        <field name="packaging_mortality"/>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
</odoo>


